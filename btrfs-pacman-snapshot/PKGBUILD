pkgname=btrfs-pacman-snapshot
pkgver=1.0.0
pkgrel=1
pkgdesc="A script and pacman hook to create and manage read-only btrfs snapshots before pacman operations"
arch=('any')
license=('GPL')
depends=('btrfs-progs' 'pacman')
source=("btrfs-pacman-snapshot.sh" "99-pacman-snapshot.hook")
sha256sums=('SKIP' 'SKIP')

package() {
    install -Dm755 "${srcdir}/btrfs-pacman-snapshot.sh" "${pkgdir}/usr/share/libalpm/scripts/btrfs-pacman-snapshot.sh"
    install -Dm644 "${srcdir}/99-pacman-snapshot.hook" "${pkgdir}/etc/pacman.d/hooks/99-pacman-snapshot.hook"
}
