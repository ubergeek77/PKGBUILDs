pkgname=btrfs-home-snapshot
pkgver=1.0.0
pkgrel=1
pkgdesc="A script and cron job to create and manage read-only btrfs snapshots of the home subvolume on boot"
arch=('any')
license=('GPL')
depends=('btrfs-progs' 'runit')

source=("btrfs-home-snapshot.sh")
sha256sums=('SKIP')

package() {
    install -Dm755 "${srcdir}/btrfs-home-snapshot.sh" "${pkgdir}/etc/local.d/btrfs-home-snapshot.start"
}
